<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/padding_small"
    android:paddingRight="@dimen/padding_small"
    android:orientation="vertical"
    android:background="@drawable/bg_checkout_pay"
    android:visibility="gone"
    >
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:orientation="vertical"
      >
    <TextView
        android:id="@+id/tv_pay_coupon_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_1_5"
        android:text="优惠券"
        android:textColor="@color/color_pay_view_btn"
        android:textSize="@dimen/text_font_size_big"
        />


    <ListView
        android:id="@+id/lv_coupon"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingBottom="@dimen/padding_small"
        android:paddingTop="@dimen/padding_small"
        android:choiceMode="singleChoice"
        android:divider="@color/white"
        android:dividerHeight="5dp"
        ></ListView>
  </LinearLayout>


  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="2dp"
      android:layout_gravity="bottom"
      >

    <TextView
        android:id="@+id/tv_pay_coupon_cancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@drawable/selector_btn_close_pay"
        android:textSize="@dimen/text_font_size_normal"
        android:textColor="@color/white"
        android:text="取消"
        android:paddingTop="@dimen/padding_big"
        android:paddingBottom="@dimen/padding_big"
        />

    <TextView
        android:id="@+id/tv_pay_coupon_confirm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@drawable/selector_btn_confirm_pay"
        android:textSize="@dimen/text_font_size_normal"
        android:textColor="@color/white"
        android:text="确认"
        android:paddingTop="@dimen/padding_big"
        android:paddingBottom="@dimen/padding_big"
        />
  </LinearLayout>
</LinearLayout>