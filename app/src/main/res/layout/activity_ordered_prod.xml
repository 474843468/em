<?xml version="1.0" encoding="utf-8"?>
<com.psi.easymanager.widget.SwipeBackLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_view"
    style="@style/MatchWidthAndMatchHeight">

  <RelativeLayout
      style="@style/MatchWidthAndMatchHeight"
      android:padding="@dimen/padding_normal"
      android:background="@color/white">

    <TextView
        android:id="@+id/tv_name"
        style="@style/WrapWidthAndWrapHeight"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/margin_2_5"
        android:layout_marginTop="@dimen/margin_2_5"
        android:text="名称"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/text_font_size_big" />

    <View
        android:id="@+id/divider_1"
        style="@style/DividerLineGray"
        android:layout_below="@id/tv_name" />

    <TextView
        android:id="@+id/tv_num_title"
        style="@style/OrderedProdActivityTvLeft"
        android:layout_below="@id/divider_1"
        android:text="数量" />

    <TextView
        android:id="@+id/tv_num"
        style="@style/OrderedProdActivityTvRight"
        android:layout_below="@id/divider_1"
        android:layout_toRightOf="@id/tv_num_title"
        android:text="数量" />

    <View
        android:id="@+id/divider_2"
        style="@style/DividerLineGray"
        android:layout_below="@id/tv_num_title"
        android:layout_marginTop="@dimen/margin_2_5" />

    <RelativeLayout
        android:id="@+id/rl_multiple_num"
        style="@style/MatchWidthAndWrapHeight"
        android:layout_below="@id/divider_2">

      <TextView
          android:id="@+id/tv_multiple_num_title"
          style="@style/OrderedProdActivityTvLeft"
          android:layout_centerVertical="true"
          android:text="重量" />

      <TextView
          android:id="@+id/tv_multiple_num"
          style="@style/OrderedProdActivityTvRight"
          android:layout_marginBottom="@dimen/margin_2_5"
          android:layout_toRightOf="@id/tv_multiple_num_title"
          android:text="重量" />
    </RelativeLayout>

    <View
        android:id="@+id/divider_3"
        style="@style/DividerLineGray"
        android:layout_below="@id/rl_multiple_num" />

    <TextView
        android:id="@+id/tv_price_title"
        style="@style/OrderedProdActivityTvLeft"
        android:layout_below="@id/divider_3"
        android:text="价格" />

    <TextView
        android:id="@+id/tv_price"
        style="@style/OrderedProdActivityTvRight"
        android:layout_below="@id/divider_3"
        android:layout_toRightOf="@id/tv_price_title"
        android:text="价格" />

    <View
        android:id="@+id/divider_4"
        style="@style/DividerLineGray"
        android:layout_below="@id/tv_price_title"
        android:layout_marginTop="@dimen/margin_2_5" />

    <TextView
        android:id="@+id/tv_format_title"
        style="@style/OrderedProdActivityTvLeft"
        android:layout_below="@id/divider_4"
        android:text="规格" />

    <TextView
        android:id="@+id/tv_format"
        style="@style/OrderedProdActivityTvRight"
        android:layout_below="@id/divider_4"
        android:layout_toRightOf="@id/tv_format_title"
        android:text="无" />

    <View
        android:id="@+id/divider_5"
        style="@style/DividerLineGray"
        android:layout_below="@id/tv_format_title"
        android:layout_marginTop="@dimen/margin_2_5" />

    <TextView
        android:id="@+id/tv_method_title"
        style="@style/OrderedProdActivityTvLeft"
        android:layout_below="@id/divider_5"
        android:text="做法" />

    <TextView
        android:id="@+id/tv_method"
        style="@style/OrderedProdActivityTvRight"
        android:layout_below="@id/divider_5"
        android:layout_toRightOf="@id/tv_method_title"
        android:text="无" />

    <View
        android:id="@+id/divider_6"
        style="@style/DividerLineGray"
        android:layout_below="@id/tv_method_title"
        android:layout_marginTop="@dimen/margin_2_5" />

    <TextView
        android:id="@+id/tv_remarks_title"
        style="@style/OrderedProdActivityTvLeft"
        android:layout_below="@id/divider_6"
        android:text="备注" />

    <TextView
        android:id="@+id/tv_remarks"
        style="@style/OrderedProdActivityTvRight"
        android:layout_below="@id/divider_6"
        android:layout_toRightOf="@id/tv_remarks_title"
        android:text="无" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

      <Button
          android:id="@+id/btn_refund"
          style="@style/BigHorizontalBtn"
          android:layout_alignParentRight="true"
          android:background="@drawable/selector_refund_prod_btn"
          android:text="退菜" />

      <Button
          android:id="@+id/btn_urge"
          style="@style/BigHorizontalBtn"
          android:layout_toLeftOf="@id/btn_refund"
          android:background="@drawable/selector_add_prod_btn"
          android:text="催菜"
          android:visibility="gone" />

      <Button
          android:id="@+id/btn_take_food"
          style="@style/BigHorizontalBtn"
          android:layout_toLeftOf="@id/btn_urge"
          android:background="@drawable/selector_take_food_btn"
          android:text="取餐" />
    </RelativeLayout>

  </RelativeLayout>
</com.psi.easymanager.widget.SwipeBackLayout>