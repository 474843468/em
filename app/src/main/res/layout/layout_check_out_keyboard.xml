<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/bg_checkout_ll_kbd"
    android:padding="2dp"
    >
  <!--7、4、1、0-->
  <LinearLayout
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:orientation="vertical"
      >
    <TextView
        android:id="@+id/btn_check_out_7"
        style="@style/LayoutCheckOutKeyBoardNumBtnStyle"
        android:text="7"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_page_bg"
        />
    <TextView
        android:id="@+id/btn_check_out_4"
        style="@style/LayoutCheckOutKeyBoardNumBtnStyle"
        android:text="4"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_page_bg"
        />
    <TextView
        android:id="@+id/btn_check_out_1"
        style="@style/LayoutCheckOutKeyBoardNumBtnStyle"
        android:text="1"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_page_bg"
        />
    <TextView
        android:id="@+id/btn_check_out_0"
        style="@style/LayoutCheckOutKeyBoardNumBtnStyle"
        android:text="0"
        />
  </LinearLayout>
  <View
      android:layout_width="1dp"
      android:layout_height="match_parent"
      android:background="@color/gray_page_bg"
      />
  <!--8、5、2、00-->
  <LinearLayout
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:orientation="vertical"
      >

    <TextView
        android:id="@+id/btn_check_out_8"
        style="@style/LayoutCheckOutKeyBoardNumBtnStyle"
        android:text="8"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_page_bg"
        />
    <TextView
        android:id="@+id/btn_check_out_5"
        style="@style/LayoutCheckOutKeyBoardNumBtnStyle"
        android:text="5"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_page_bg"
        />
    <TextView
        android:id="@+id/btn_check_out_2"
        style="@style/LayoutCheckOutKeyBoardNumBtnStyle"
        android:text="2"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_page_bg"
        />
    <TextView
        android:id="@+id/btn_check_out_point"
        style="@style/LayoutCheckOutKeyBoardNumBtnStyle"
        android:text="."
        />
  </LinearLayout>
  <View
      android:layout_width="1dp"
      android:layout_height="match_parent"
      android:background="@color/gray_page_bg"
      />
  <!--9、6、3、.-->
  <LinearLayout
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:orientation="vertical"
      >

    <TextView
        android:id="@+id/btn_check_out_9"
        style="@style/LayoutCheckOutKeyBoardNumBtnStyle"
        android:text="9"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_page_bg"
        />
    <TextView
        android:id="@+id/btn_check_out_6"
        style="@style/LayoutCheckOutKeyBoardNumBtnStyle"
        android:text="6"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_page_bg"
        />
    <TextView
        android:id="@+id/btn_check_out_3"
        style="@style/LayoutCheckOutKeyBoardNumBtnStyle"
        android:text="3"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_page_bg"
        />
    <TextView
        android:id="@+id/btn_check_out_del"
        style="@style/LayoutCheckOutKeyBoardNumBtnStyle"
        android:text="删除"
        />
  </LinearLayout>
  <View
      android:layout_width="1dp"
      android:layout_height="match_parent"
      android:background="@color/gray_page_bg"
      />
  <!--删除、取消、结账完毕-->
  <TextView
      android:id="@+id/btn_check_out_over"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:text="结\n账\n完\n毕"
      android:textSize="@dimen/text_font_size_big"
      android:background="@drawable/selector_btn_checkout_over_bill"
      android:textColor="@color/white"
      android:gravity="center"
      >
  </TextView>
</LinearLayout>