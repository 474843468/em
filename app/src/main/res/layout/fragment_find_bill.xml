<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="horizontal"
      android:layout_marginBottom="80dp"
      >

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcv_table_retail"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="88"
        android:padding="@dimen/padding_small"
        />
    <ListView
        android:id="@+id/lv_table_type"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="12"
        android:padding="@dimen/padding_small"
        android:background="@color/white"
        android:choiceMode="singleChoice"
        android:scrollbars="none"
        android:divider="#ffffff"
        android:dividerHeight="10dp"
        />
  </LinearLayout>
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_marginLeft="@dimen/margin_2_5"
      android:layout_marginBottom="@dimen/margin_2_5"
      >
    <RadioGroup
        android:id="@+id/rg_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        >
      <RadioButton
          android:id="@id/rb_table"
          android:layout_width="100dp"
          android:layout_height="50dp"
          android:layout_weight="1"
          android:checked="true"
          android:button="@null"
          android:textColor="@color/white"
          android:text="桌位单"
          android:background="@drawable/selector_rb_table_type"
          android:gravity="center"
          />
      <RadioButton
          android:id="@+id/rb_retail"
          android:layout_width="100dp"
          android:layout_height="50dp"
          android:layout_marginLeft="@dimen/margin_1_5"
          android:button="@null"
          android:textColor="@color/white"
          android:text="零售单"
          android:background="@drawable/selector_rb_table_type"
          android:gravity="center"
          />
    </RadioGroup>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/rg_type"
        android:layout_marginLeft="@dimen/margin_4_5"
        >
      <LinearLayout
          android:id="@+id/ll_hint_empty_table"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          >
        <ImageView
            style="@style/ProdTypeHintIvStyle"
            android:id="@+id/iv_hint_empty_table"
            android:layout_gravity="center_vertical"
            android:src="@drawable/bg_hint_table_type_empty"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@id/iv_hint_empty_table"
            android:textSize="@dimen/text_font_size_normal"
            android:textColor="@color/primary_text"
            android:text="空闲"
            />
      </LinearLayout>

      <LinearLayout
          android:id="@+id/ll_hint_occupy_table"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_toRightOf="@id/ll_hint_empty_table"
          android:layout_marginLeft="@dimen/margin_1_5"
          >
        <ImageView
            style="@style/ProdTypeHintIvStyle"
            android:id="@+id/iv_hint_occupy_table"
            android:layout_gravity="center_vertical"
            android:src="@drawable/bg_hint_table_type_occupy"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@id/iv_hint_occupy_table"
            android:textSize="@dimen/text_font_size_normal"
            android:textColor="@color/primary_text"
            android:text="占用"
            />
      </LinearLayout>

      <LinearLayout
          android:id="@+id/ll_hint_sel_table"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/ll_hint_empty_table"
          android:layout_marginTop="@dimen/margin_1_5"
          >
        <ImageView
            style="@style/ProdTypeHintIvStyle"
            android:id="@+id/iv_hint_sel_table"
            android:layout_gravity="center_vertical"
            android:src="@drawable/bg_hint_table_type_sel"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@id/iv_hint_sel_table"
            android:textSize="@dimen/text_font_size_normal"
            android:textColor="@color/primary_text"
            android:text="选中"
            />
      </LinearLayout>

    </RelativeLayout>
  </RelativeLayout>

</RelativeLayout>
