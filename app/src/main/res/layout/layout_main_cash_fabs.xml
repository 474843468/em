<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_cash_btns"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

  <ImageButton
      android:id="@+id/ibtn_find_bill"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:background="@drawable/selector_btn_find_bill"
      android:scaleType="centerCrop" />

  <ImageButton
      android:id="@+id/ibtn_take_order"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:layout_marginLeft="@dimen/margin_2_5"
      android:layout_marginRight="@dimen/margin_2_5"
      android:layout_toRightOf="@id/ibtn_find_bill"
      android:background="@drawable/selector_btn_take_order"
      android:scaleType="centerCrop" />

  <ImageButton
      android:id="@+id/ibtn_check_out"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:layout_toRightOf="@id/ibtn_take_order"
      android:background="@drawable/selector_btn_check_out"
      android:scaleType="centerCrop" />
</RelativeLayout>
