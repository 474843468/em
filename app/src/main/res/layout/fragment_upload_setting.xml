<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/padding_normal"
    android:paddingRight="@dimen/padding_normal"
    android:background="@color/white"
    android:orientation="vertical">

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_marginTop="@dimen/margin_2_5"
      android:gravity="center"
      android:text="上传设置数据"
      android:textColor="@color/black"
      android:textSize="@dimen/text_font_title" />

  <View
      style="@style/DividerLineBlack"
      android:layout_marginBottom="@dimen/margin_2_5"
      android:layout_marginTop="@dimen/margin_1_5" />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="center"
      android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_table_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_upload_setting" />

    <TextView
        android:id="@+id/tv_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_table_refresh"
        android:layout_marginBottom="@dimen/margin_2_5"
        android:layout_marginTop="@dimen/margin_2_5"
        android:text="数据同步后,如果Fire服务生等客户端数据同步有误，\n或无法同步，请点击这里重新上传设置数据"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/text_font_size_normal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_2_5"
        android:layout_marginTop="@dimen/margin_2_5"
        android:text="最近一次上传时间:"
        android:textColor="#0288d1"
        android:textSize="@dimen/text_font_size_small" />

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_hint"
        android:background="@drawable/bg_refresh_table_btn"
        android:text="确认"
        android:textColor="@color/white" />
  </LinearLayout>

</LinearLayout>