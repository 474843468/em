<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_small"
    >

  <TextView
      android:id="@+id/tv_pay_type"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:text="类型"
      android:textColor="@color/colorAccent"

      />

  <TextView
      android:id="@+id/tv_pay_time"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:layout_marginLeft="@dimen/margin_2_5"
      android:layout_toRightOf="@id/tv_pay_type"
      />

  <ImageView
      android:id="@+id/iv_del"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:layout_centerVertical="true"
      android:padding="@dimen/padding_small"
      android:scaleType="centerCrop"
      android:src="@mipmap/ic_del_pay_info"
      />

  <TextView
      android:id="@+id/tv_pay_money"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:layout_marginRight="@dimen/margin_4_5"
      android:layout_toLeftOf="@id/iv_del"
      android:textColor="@color/primary_text"
      />

  <TextView
      android:id="@+id/tv_ticket_code"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toLeftOf="@id/tv_pay_money"
      android:layout_centerVertical="true"
      android:layout_marginRight="@dimen/margin_4_5"
      android:textColor="@color/primary_text"
      />
</RelativeLayout>