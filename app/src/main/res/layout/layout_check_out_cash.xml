<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/padding_small"
    android:paddingRight="@dimen/padding_small"
    android:orientation="vertical"
    android:background="@drawable/bg_checkout_pay"
    >
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:orientation="vertical"
      >
    <TextView
        android:id="@+id/tv_pay_cash_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_1_5"
        android:textSize="@dimen/text_font_size_big"
        android:textColor="@color/color_pay_view_btn"
        android:text="现金"
        />

    <!--应收-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_2_5"
        android:padding="@dimen/padding_normal"
        android:background="@drawable/bg_pay_rl"
        >

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:textColor="@color/white"
          android:text="应收:"
          />

      <TextView
          android:id="@+id/tv_pay_cash_receivable"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerInParent="true"
          android:textColor="@color/white"
          android:text="0.0"
          />
    </RelativeLayout>
    <!--实收-->
    <RelativeLayout
        android:id="@+id/rl_pay_cash_received"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_2_5"
        android:padding="@dimen/padding_normal"
        android:background="@drawable/bg_pay_rl"
        >

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:textColor="@color/white"
          android:text="实收:"
          />

      <TextView
          android:id="@+id/tv_pay_cash_received"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerInParent="true"
          android:textColor="@color/white"
          android:text="0.0"
          />
    </RelativeLayout>
    <!--找零-->
    <RelativeLayout
        android:id="@+id/rl_pay_cash_change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_2_5"
        android:padding="@dimen/padding_normal"
        android:background="@drawable/bg_pay_rl"
        >

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:textColor="@color/white"
          android:text="找零:"
          />

      <TextView
          android:id="@+id/tv_pay_cash_change"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerInParent="true"
          android:textColor="@color/white"
          android:text="0.0"
          />
    </RelativeLayout>
  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="2dp"
      android:layout_gravity="bottom"
      >

    <TextView
        android:id="@+id/tv_pay_cash_cancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@drawable/selector_btn_close_pay"
        android:textSize="@dimen/text_font_size_normal"
        android:textColor="@color/white"
        android:text="取消"
        android:paddingTop="@dimen/padding_big"
        android:paddingBottom="@dimen/padding_big"
        />

    <TextView
        android:id="@+id/tv_pay_cash_confirm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@drawable/selector_btn_confirm_pay"
        android:textSize="@dimen/text_font_size_normal"
        android:textColor="@color/white"
        android:text="确认"
        android:paddingTop="@dimen/padding_big"
        android:paddingBottom="@dimen/padding_big"
        />
  </LinearLayout>

</LinearLayout>
