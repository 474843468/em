<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_item_member"
    style="@style/MatchWidthAndWrapHeight"
    android:clickable="true"
    app:cardCornerRadius="@dimen/item_vip_container_cardCornerRadius"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true"
    app:contentPadding="3dp">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="@dimen/margin_12_5"
      android:orientation="horizontal">

    <!--ImageView-->
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="15">

      <ImageView
          android:id="@+id/iv_item_icon"
          android:layout_width="@dimen/margin_7_5"
          android:layout_height="@dimen/margin_7_5"
          android:layout_gravity="center"
          android:layout_margin="@dimen/margin_1_5"
          android:scaleType="centerInside" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="90"
        android:orientation="vertical">

      <LinearLayout
          android:layout_width="fill_parent"
          android:layout_height="0dp"
          android:layout_weight="1"
          android:gravity="center_vertical">

        <!--会员名字-->
        <TextView
            android:id="@+id/tv_item_member_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_1_5"
            android:layout_weight="1"
            android:text="会员名"
            android:textSize="@dimen/text_font_size_normal" />

        <!--会员余额-->
        <TextView
            android:id="@+id/tv_item_member_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_1_5"
            android:text="会员余额"
            android:textSize="@dimen/text_font_size_small" />
      </LinearLayout>

      <LinearLayout
          android:layout_width="fill_parent"
          android:layout_height="0dp"
          android:layout_weight="1"
          android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_1_5"
            android:gravity="center_vertical"
            android:text="会员电话:"
            android:textSize="@dimen/text_font_size_normal" />

        <!--会员电话-->
        <TextView
            android:id="@+id/tv_item_member_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_1_5"
            android:gravity="center_vertical"
            android:text="会员号码"
            android:textSize="@dimen/text_font_size_normal" />

      </LinearLayout>

    </LinearLayout>

  </LinearLayout>

</android.support.v7.widget.CardView>