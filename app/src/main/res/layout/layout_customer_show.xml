<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >
  <LinearLayout
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="32"
      android:orientation="vertical"
      android:background="@color/white"
      >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
      <TextView
          android:id="@+id/tv_table"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:padding="@dimen/padding_small"
          android:textSize="@dimen/text_font_guest_normal"
          android:textColor="@color/primary_text"
          android:text="桌台:"
          />
      <TextView
          android:id="@+id/tv_people_num"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:layout_centerVertical="true"
          android:padding="@dimen/padding_small"
          android:textSize="@dimen/text_font_guest_normal"
          android:textColor="@color/colorAccent"
          android:text="人数:"
          />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/primary_text"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal"
        >

      <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="2"
          android:text="名称"
          android:gravity="center"
          android:layout_gravity="center_vertical"
          android:textColor="@color/primary_text"
          />
      <View
          android:layout_width="1dp"
          android:layout_height="match_parent"
          android:background="@color/primary_text"
          />
      <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="2"
          android:gravity="center"
          android:text="数量/重量"
          android:layout_gravity="center_vertical"
          android:textColor="@color/primary_text"
          />
      <View
          android:layout_width="1dp"
          android:layout_height="match_parent"
          android:background="@color/primary_text"
          />
      <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:gravity="center"
          android:text="价格"
          android:layout_gravity="center_vertical"
          android:textColor="@color/primary_text"
          />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/primary_text"
        />
    <ListView
        android:id="@+id/lv_guest_show"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        ></ListView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_2_5"
        android:layout_marginBottom="@dimen/margin_1_5"
        >
      <TextView
          android:id="@+id/tv_total_amount"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:textSize="@dimen/text_font_guest_normal"
          android:textColor="@color/primary_text"
          android:text="合计:"
          />
      <TextView
          android:id="@+id/tv_received_amount"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/tv_total_amount"
          android:layout_alignParentRight="true"
          android:textSize="@dimen/text_font_guest_normal"
          android:textColor="@color/colorAccent"
          android:text="实收:"
          />
      <TextView
          android:id="@+id/tv_receivable_amount"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/tv_total_amount"
          android:layout_toLeftOf="@id/tv_received_amount"
          android:layout_marginRight="@dimen/margin_2_5"
          android:textSize="@dimen/text_font_guest_normal"
          android:textColor="@color/primary_text"
          android:text="应收:"
          />
      <TextView
          android:id="@+id/tv_change_amount"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/tv_received_amount"
          android:layout_alignParentRight="true"
          android:textSize="@dimen/text_font_guest_normal"
          android:textColor="@color/primary_text"
          android:text="找零:"
          />
      <TextView
          android:id="@+id/tv_privilege_amount"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/tv_received_amount"
          android:layout_toLeftOf="@id/tv_change_amount"
          android:layout_marginRight="@dimen/margin_2_5"
          android:textSize="@dimen/text_font_guest_normal"
          android:textColor="@color/primary_text"
          android:text="优惠:"
          />
      <TextView
          android:id="@+id/tv_wait_pay_amount"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/tv_change_amount"
          android:layout_alignParentRight="true"
          android:textSize="@dimen/text_font_guest_normal"
          android:textColor="@color/colorAccent"
          android:text="待支付:"
          />
    </RelativeLayout>
  </LinearLayout>

  <RelativeLayout
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="68"
      >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/bg_guest"
        />
  </RelativeLayout>
</LinearLayout>
