<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_modify_bill_btns"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

  <ImageButton
      android:id="@+id/ibtn_cancel"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@drawable/selector_btn_cancel_red"
      android:scaleType="centerCrop" />

  <ImageButton
      android:id="@+id/ibtn_urge"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="@dimen/margin_2_5"
      android:background="@drawable/selector_btn_urge_yellow"
      android:scaleType="centerCrop"
      android:visibility="gone" />

  <ImageButton
      android:id="@+id/ibtn_revoke"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="@dimen/margin_2_5"
      android:background="@drawable/selector_btn_revoke_red"
      android:scaleType="centerCrop" />

  <ImageButton
      android:id="@+id/ibtn_confirm"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="@dimen/margin_2_5"
      android:background="@drawable/selector_btn_confirm_blue"
      android:scaleType="centerCrop" />

</LinearLayout>
