<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/view_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="#26c6da"
    app:cardCornerRadius="10dp">

  <LinearLayout
      android:layout_width="@dimen/item_prod_child_cate_adapter_view_click_width"
      android:layout_height="@dimen/item_prod_child_cate_adapter_view_click_height"
      android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="58">

      <TextView
          android:id="@+id/tv_name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_marginLeft="@dimen/margin_2_5"
          android:text="名称"
          android:textColor="@color/white"
          android:textSize="@dimen/text_font_prod_name" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/view_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="42"
        android:background="#00acc1">

      <TextView
          android:id="@+id/tv_full_name"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/margin_1_5"
          android:paddingLeft="@dimen/padding_normal"
          android:textColor="@color/white"
          android:textSize="@dimen/text_font_size_normal" />

      <TextView
          android:id="@+id/tv_price"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/tv_full_name"
          android:layout_marginTop="@dimen/margin_1_5"
          android:paddingLeft="@dimen/padding_normal"
          android:textColor="@color/white"
          android:textSize="@dimen/text_font_size_normal" />

      <TextView
          android:id="@+id/tv_promotio_price"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/tv_full_name"
          android:layout_marginTop="@dimen/margin_1_5"
          android:layout_toRightOf="@id/tv_price"
          android:paddingLeft="@dimen/padding_normal"
          android:textColor="@color/red"
          android:textSize="@dimen/text_font_size_normal" />

      <TextView
          android:id="@+id/tv_surplus_num"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/tv_full_name"
          android:layout_marginLeft="@dimen/margin_2_5"
          android:layout_marginTop="@dimen/margin_1_5"
          android:layout_toRightOf="@id/tv_promotio_price"
          android:textColor="#6d4c41"
          android:textSize="@dimen/text_font_size_normal" />
    </RelativeLayout>
  </LinearLayout>

  <TextView
      android:id="@+id/tv_prod_num"
      android:layout_width="24dp"
      android:layout_height="24dp"
      android:layout_gravity="right|top"
      android:background="@drawable/bg_item_prod_num"
      android:gravity="center"
      android:textColor="@color/white" />
</android.support.v7.widget.CardView>
