<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/padding_small"
    android:paddingRight="@dimen/padding_small"
    android:orientation="vertical"
    android:background="@drawable/bg_checkout_pay"
    >
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:orientation="vertical"
      >
    <TextView
        android:id="@+id/tv_pay_group_coupon_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_1_5"
        android:textSize="@dimen/text_font_size_big"
        android:textColor="@color/color_pay_view_btn"
        android:text="团购券"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_2_5"
        android:padding="@dimen/padding_normal"
        android:background="@drawable/bg_pay_rl"
        >
      <RelativeLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:layout_gravity="center_vertical"
          android:background="@drawable/bg_pay_rl"
          >
        <TextView
            android:id="@+id/tv_pay_group_coupon_store_amount_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:text="门市价:"
            />
        <TextView
            android:id="@+id/tv_pay_group_coupon_store_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:layout_toRightOf="@id/tv_pay_group_coupon_store_amount_title"
            />
      </RelativeLayout>
      <RelativeLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:layout_gravity="center_vertical"
          android:background="@drawable/bg_pay_rl"
          >
        <TextView
            android:id="@+id/tv_pay_group_coupon_received_amount_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:text="实收:"
            />

        <TextView
            android:id="@+id/tv_pay_group_coupon_received_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:layout_toRightOf="@id/tv_pay_group_coupon_received_amount_title"
            />
      </RelativeLayout>


    </LinearLayout>
    <EditText
        android:id="@+id/et_pay_group_coupon_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:hint="验券码"
        android:layout_marginTop="@dimen/margin_1_5"
        android:padding="@dimen/padding_normal"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:background="@drawable/bg_pay_rl"
        />
    <ListView
        android:id="@+id/lv_group_coupon"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="@dimen/padding_small"
        android:paddingBottom="@dimen/padding_small"
        android:choiceMode="singleChoice"
        android:divider="@color/white"
        android:dividerHeight="2dp"
        ></ListView>
  </LinearLayout>


  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="2dp"
      android:layout_gravity="bottom"
      >

    <TextView
        android:id="@+id/tv_pay_group_coupon_cancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@drawable/selector_btn_close_pay"
        android:textSize="@dimen/text_font_size_normal"
        android:textColor="@color/white"
        android:text="取消"
        android:paddingTop="@dimen/padding_big"
        android:paddingBottom="@dimen/padding_big"
        />

    <TextView
        android:id="@+id/tv_pay_group_coupon_confirm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@drawable/selector_btn_confirm_pay"
        android:textSize="@dimen/text_font_size_normal"
        android:textColor="@color/white"
        android:text="确认"
        android:paddingTop="@dimen/padding_big"
        android:paddingBottom="@dimen/padding_big"
        />
  </LinearLayout>
</LinearLayout>
