        android:id="@+id/btn_1"
        style="@style/LoginActivityKbdBtn"
        android:layout_marginLeft="@dimen/margin_3_5"
        android:text="1" />

    <Button
        android:id="@+id/btn_2"
        style="@style/LoginActivityKbdBtn"
        android:text="2" />

    <Button
        android:id="@+id/btn_3"
        style="@style/LoginActivityKbdBtn"
        android:text="3" />

    <Button
        android:id="@+id/btn_4"
        style="@style/LoginActivityKbdBtn"
        android:text="4" />

    <Button
        android:id="@+id/btn_del"
        style="@style/LoginActivityKbdBtn"
