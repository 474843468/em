    <Button
        android:id="@+id/btn_7"
        style="@style/LoginActivityKbdBtn"
        android:text="7" />

    <Button
        android:id="@+id/btn_8"
        style="@style/LoginActivityKbdBtn"
        android:text="8" />

    <Button
        android:id="@+id/btn_clear"
        style="@style/LoginActivityKbdBtn"
        android:text="清空" />

  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:background="@color/login_kbd_bg">

    <Button
        android:id="@+id/btn_z"
        style="@style/LoginActivityKbdBtn"
        android:text="z" />

    <Button
