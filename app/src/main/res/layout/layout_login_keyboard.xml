        android:id="@+id/btn_y"
        style="@style/LoginActivityKbdBtn"
        android:text="y" />

    <Button
        android:id="@+id/btn_u"
        style="@style/LoginActivityKbdBtn"
        android:text="u" />

    <Button
        android:id="@+id/btn_i"
